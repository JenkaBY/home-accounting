<%= form_for(@category) do |f| %>
    <% if @category.errors.any? %>
        <div id="alert alert-warning">
          <h2><%= pluralize(@category.errors.count, 'error') %> prohibited this category from being saved:</h2>

          <ul>
            <% @category.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title , class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label 'Type' %>
      <%= select(:category, :type_id, get_types, { :class => 'dropdown-menu' }) %>
    </div>

    <div class="btn-toolbar justify-content-between">

      <%= hidden_div_if(@index_cat, id: 'btn_back', class: 'btn-group') do %>
          <%= link_to 'Back', categories_path, class: 'back btn btn-primary btn-lg' %>
      <% end %>

      <div class="btn-group">
          <%= f.submit 'Save', class: 'btn btn-success btn-lg'%>
      </div>

    </div>
<% end %>