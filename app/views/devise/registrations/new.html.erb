<h1 class="text-center">Sign up</h1>
<div class="row">
  <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <% unless resource.errors.empty? %>
                <div class="alert alert-warning">
                  <%= devise_error_messages! %>
                </div>
            <% end %>

            <div class="form-group">
              <%= f.label t('name') %><br/>
              <%= f.text_field :name, class: 'form-control', placeholder: t('name'), class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label t('email') %><br/>
              <%= f.email_field :email, autofocus: true, placeholder: t('placeholder_email'), class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label t('password') %> (<small><%= @minimum_password_length %> <%= t('min_charachter') %>"</small>)<br/>
              <%= f.password_field :password, autocomplete: 'off', placeholder: t('password'), class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label t('password_confirm') %> <br/>
              <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: t('password_confirm'), class: 'form-control' %>
            </div>

            <div>
              <%= f.submit t('sign_up'), class: 'btn btn-primary btn-lg' %>
            </div>
        <% end %>

      </div>
    </div>
  </div>
</div>