<h1 class="text-center">Sign up</h1>
<div class="row">
  <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <% unless resource.errors.empty? %>
                <div class="alert alert-warning">
                  <%= devise_error_messages! %>
                </div>
            <% end %>

            <div class="form-group">
              <%= f.label :name %><br/>
              <%= f.text_field :name, class: 'form-control', placeholder: 'Name', class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true, placeholder: 'Hello@youremail.com', class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br/>
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control' %>
              <% if @minimum_password_length %>
                  <br/>
                  <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password confirmation', class: 'form-control' %>
            </div>

            <div>
              <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
            </div>
        <% end %>

      </div>
    </div>
  </div>
</div>