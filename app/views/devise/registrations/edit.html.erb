<h1 class="text-center"><%= t('edit') %></h1>
<div class="row">
  <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}, role: 'form') do |f| %>
            <% unless resource.errors.empty? %>
                <div class="alert alert-warning">
                  <%= devise_error_messages! %>
                </div>
            <% end %>

            <div class="form-group">
              <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control', 'arial-label': 'basic-addon1', placeholder: 'Name', class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :email %><br/>
              <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">@</span>
              <%= f.email_field :email, autofocus: true, placeholder: 'hello@youremail.com', class: 'form-control' %>
              </div>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div class="form-group">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= label_tag t('new_password') %> <i>(<%= t('leave_blank')%>)</i><br/>
              <%= f.password_field :password, autocomplete: 'off', placeholder: "#{@minimum_password_length} characters minimum", class: 'form-control' %>
              <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="form-group">
              <%= label_tag t('new_password_confirm') %><br/>
              <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: t('new_password_confirm'), class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :current_password %> <i>(<%= t('current_password_confirm')%>)</i><br/>
              <%= f.password_field :current_password, autocomplete: 'off', placeholder: t('current_password'), class: 'form-control' %>
            </div>

            <div class="btn-toolbar justify-content-between">


              <div class="btn-group justify-content-between">
                <%= f.submit t('save'), class: 'btn btn-success btn-lg' %>
              </div>


        <% end %>
        <div class="btn-group justify-content-between">
          <%= button_to t('delete_account'), registration_path(resource_name), data: {confirm: t('confirmation')}, method: :delete, class: 'btn btn-danger btn-lg' %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>