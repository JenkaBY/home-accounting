<%= form_for(@finance) do |f| %>
    <% if @finance.errors.any?  %>
        <div id="alert alert-warning">
          <h2><%= pluralize(@finance.errors.count, 'error') %> prohibited this finance action from being saved:</h2>

          <ul>
            <% @finance.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <%= f.label :action_date, class: 'col-2 col-form-label' %>
      <div class="col-10">
      <%= f.date_select :action_date , class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :amount %>
      <%= f.text_field :amount , class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description , class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label 'Category' %>
      <%= select(:finance, :category_id, current_user.categories.all.collect { |cat| [cat.title, cat.id] },
                                          { :class => 'dropdown-menu'}) %>
    </div>

    <div class="form-group">
      <%= f.submit 'Add', class: 'btn btn-primary btn-lg'%>
    </div>
<% end %>