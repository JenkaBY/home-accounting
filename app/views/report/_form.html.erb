<%= form_tag report_path do %>

    <form class="form-inline">
      <div class="form-group">
        <div class="col-md-6">
          <%= label_tag t('start_date') %>
          <div class='input-group date' id='datetimepicker_startdate'>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
            <%= text_field :report, :start_date, class: 'form-control span2', :value => ReportHelper::MONTH_AGO %>

          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-6">
          <%= label_tag t('end_date') %>
          <div class='input-group date' id='datetimepicker_enddate'>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
            <%= text_field :report, :end_date, class: 'form-control span2', :value => ReportHelper::TODAY %>
          </div>
        </div>
      </div>


      <div class="input-group">

        <div class="btn center-block">
          <%= submit_tag t('generate'), class: 'btn btn-primary btn-lg' %>
        </div>

      </div>

    </form>

<% end %>