<%= form_tag report_path do %>
    <div class="form-group">
      <div class="col-10">
        <%= label_tag t('start_date') %>
        <%= date_select :start_date, :date   %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-10">
        <%= label_tag t('end_date') %>
        <%= date_select :end_date, :date %>
      </div>
    </div>

    <details>
      <summary><%= t('choose_type') %></summary>
      <div class="form-group">
        <%= label_tag t('type') %>
        <%= select(params[:type_id], :type_id, get_all_types,
                   {:class => 'dropdown-menu', :prompt => t('please_select') }) %>
      </div>
    </details>

    <details>
      <summary><%= t('choose_category') %></summary>
      <div class="form-group">
        <%= label_tag t('category') %>
        <%= select(params[:category_id], :category_id, get_user_categories,
                   {:class => 'dropdown-menu', :prompt => t('please_select')}) %>
      </div>
    </details>

    <div class="btn-group">
      <%= submit_tag t('generate'), class: 'back btn btn-primary btn-lg' %>
    </div>

<% end %>
