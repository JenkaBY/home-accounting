<h4 class="text-center"> <%= t('finance_report') %> <%= @start_date %> - <%= @end_date %></h4>
<%= render 'report/all' %>

<% @type_id.each do |type| %>

    <% if type == Type::INCOME %>
        <% @categories = @categories_income %>
        <% @finances_current = @total_income_period %>

        <h4 class="text-center"> <%= t('finance_report') %> <%= @start_date %>
          - <%= @end_date %> <%= t('grouped_by') %> <%= t('category') %>(<%= t('income') %>) </h4>

        <%= render 'report/bytype' %>
    <% end %>

    <% if type == Type::EXPENSE %>
        <% @categories = @categories_expense %>
        <% @finances_current = @total_expense_period %>
        <h4 class="text-center"> <%= t('finance_report') %> <%= @start_date %>
          - <%= @end_date %> <%= t('grouped_by') %> <%= t('category') %>(<%= t('expense') %>)  </h4>

        <%= render 'report/bytype' %>
    <% end %>

<% end %>